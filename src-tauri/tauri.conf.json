{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LifeQuest",
  "version": "1.0.0",
  "identifier": "com.lifequest.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LifeQuest",
        "width": 393,
        "height": 800,
        "theme": "Dark",
        "backgroundColor": "#12151A"
      }
    ],
    "macOSPrivateApi": false,
    "security": {
      "csp": null
    }
  },
  "mainBinaryName": "LifeQuest",
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
